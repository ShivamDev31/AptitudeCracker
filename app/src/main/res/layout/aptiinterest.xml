<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BgAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <EditText
            android:id="@+id/et_apti_Principal"
            style="@style/ETStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:hint="@string/EnterPrincipal"
            android:inputType="number"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_apti_Rate"
            style="@style/ETStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:hint="@string/enterRate"
            android:inputType="number"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_apti_Time"
            style="@style/ETStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:hint="@string/entertime"
            android:inputType="number"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_apti_Answer"
            style="@style/TVStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b_apti_CalcSimpleInt"
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/simpleint" />
        <Button
            android:id="@+id/b_apti_CalcCompoundInt"
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/compoundint" />

        <Button
            android:id="@+id/bClear"
            style="@style/ButtonRed"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/clear" />
    </LinearLayout>

</ScrollView>