<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BgAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <RadioGroup
            android:id="@+id/rg_apti_TimeDist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_apti_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/RbTime" />

            <RadioButton
                android:id="@+id/rb_apti_Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RbSpeed" />

            <RadioButton
                android:id="@+id/rb_apti_Distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RbDistance" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_apti_Time"
            style="@style/ETStyle"
            android:layout_marginTop="20.0dip"
            android:hint="@string/enterTime"
            android:inputType="number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_apti_Speed"
            style="@style/ETStyle"
            android:hint="@string/enterSpeed"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_apti_distance"
            style="@style/ETStyle"
            android:hint="@string/enterDistance"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_apti_Result"
            style="@style/TVStyle"
            android:gravity="center"
            android:textIsSelectable="true"
            android:textSize="22.0sp" />

        <Button
            android:id="@+id/b_apti_CalcTDS"
            style="@style/ButtonStyle"
            android:layout_marginTop="10.0dip"
            android:padding="10dp"
            android:text="@string/calc" />

        <Button
            android:id="@+id/bClear"
            style="@style/ButtonRed"
            android:layout_marginTop="10.0dip"
            android:padding="10dp"
            android:text="@string/clear" />
    </LinearLayout>

</ScrollView>