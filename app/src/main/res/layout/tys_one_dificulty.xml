<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    style="@style/BgAll"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="9dp">

    <TextView
        android:id="@+id/tv_tys_TestUrSkills"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="@string/testyourskills"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#53b0e5"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tv_tys_Ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tys_TestUrSkills"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/test_mental_ability"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#878787" />

    <TextView
        android:id="@+id/tv_tys_DifficultyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tys_Ability"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:text="@string/difficulty_type"
        android:textSize="17sp" />

    <RadioGroup
        android:id="@+id/rg_tys_DiffLevel"
        style="@style/ButtonStyle"
        android:layout_width="fill_parent"
        android:layout_below="@+id/tv_tys_DifficultyType"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp">

        <RadioButton
            android:id="@+id/rb_tys_Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:checked="true"
            android:text="@string/easy" />

        <RadioButton
            android:id="@+id/rb_tys_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:text="@string/medium" />

        <RadioButton
            android:id="@+id/rb_tys_Hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:text="@string/hard" />
    </RadioGroup>

    <Button
        android:id="@+id/b_tys_Continue"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/rg_tys_DiffLevel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="7dp"
        android:text="@string/next" />

    <Button
        android:id="@+id/b_tys_HighScores"
        style="@style/ButtonGreen"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:padding="7dp"
        android:text="@string/high_scores" />


</RelativeLayout>
