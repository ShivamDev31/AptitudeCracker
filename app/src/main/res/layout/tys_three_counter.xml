<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BgAll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_tys_NumberOfQues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10.0dip"
        android:textColor="#db5e3c"
        android:textSize="33.0sp" />

    <TextView
        android:id="@+id/tv_tys_DifficultyType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18.0dip"
        android:textColor="#ff999999"
        android:textSize="33.0sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_tys_QuestionsType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18.0dip"
        android:textColor="#ff646060"
        android:textSize="25.0dip" />

    <TextView
        android:id="@+id/tv_tys_Counter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="4.0dip"
        android:gravity="center"
        android:textColor="#878787"
        android:textSize="100.0sp"
        android:typeface="serif" />

</LinearLayout>