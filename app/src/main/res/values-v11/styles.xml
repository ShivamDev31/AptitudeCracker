<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Made By Shivam Chopra ( www.droidacid.com ) -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BgAll">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="ButtonRed">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button4</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button3</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button2</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="TVStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ETStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RGStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button1</item>
    </style>

    <!-- ActionBar Styling -->

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
    </style>


</resources>
