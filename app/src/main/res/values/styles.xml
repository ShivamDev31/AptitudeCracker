<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Made By Shivam Chopra ( www.droidacid.com ) -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BgAll">
        <item name="android:background">@drawable/background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonRed">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button4</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button3</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button2</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="TVStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#878787</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ETStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="RGStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button1</item>
    </style>

    <!-- ActionBar Styling -->

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar</item>
        
    </style>

</resources>